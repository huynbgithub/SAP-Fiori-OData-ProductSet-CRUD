<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="project.project.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smarttable="sap.ui.comp.smarttable"
>
<!-- Shell: Main container for the app -->
    <Shell>
    <!-- App: Container for pages -->
        <App
            backgroundColor=""
            backgroundImage=""
            backgroundOpacity="1"
            backgroundRepeat="false"
            homeIcon=""
            mobileWebAppCapable="true"
            autoFocus="true"
        >
        <!-- pages: Contains individual pages -->
            <pages>
            <!-- content: Main content area of the page -->
                <Page
                    id="page"
                    title="{i18n>title}"
                >
                    <content>
                     <!-- SmartFilterBar: Provides filter options for the SmartTable -->
                        <smartfilterbar:SmartFilterBar
                            id="idSmartFilterBar"
                            entitySet="ProductSet"
                        >
                         <!-- controlConfiguration: Configuration for filter controls -->
                            <smartfilterbar:controlConfiguration>
                            <!-- ControlConfiguration for Product ID -->
                                <smartfilterbar:ControlConfiguration
                                    id="idProductID"
                                    visibleInAdvancedArea="true"
                                    label="Product ID"
                                    key="ProductID"
                                />
                                <!-- ControlConfiguration for Category -->
                                <smartfilterbar:ControlConfiguration
                                    id="idCategory"
                                    visibleInAdvancedArea="true"
                                    label="Category"
                                    key="Category"
                                />
                                <!-- ControlConfiguration for Currency Code -->
                                <smartfilterbar:ControlConfiguration
                                    id="idCurrencyCode"
                                    visibleInAdvancedArea="true"
                                    label="Currency Code"
                                    key="CurrencyCode"
                                />
                            </smartfilterbar:controlConfiguration>
                        </smartfilterbar:SmartFilterBar>

                        <!-- SmartTable: Represents a table with smart features -->
                        <smarttable:SmartTable
                            id="idSmartTable"
                            smartFilterId="idSmartFilterBar"
                            tableType="ResponsiveTable"
                            entitySet="ProductSet"
                            useVariantManagement="false"
                            app:useSmartToggle="true"
                            useTablePersonalisation="true"
                            header="Products"
                            showRowCount="true"
                            showTablePersonalisation="false"
                            fieldChange="onChange"
                            initiallyVisibleFields="ProductID,TypeCode,SupplierID,CurrencyCode,Name,Category,Price,TaxTarifCode,MeasureUnit"
                            editable="false"
                            editTogglable="false"
                            demandPopin="true"
                            enableAutoBinding="true"
                            customToolbar="onCustomToolbar"
                            useExportToExcel="false"
                        >

                        <!-- Table: Custom data inside SmartTable -->
                        <Table
                                id="idResponsiveTable"
                                mode="MultiSelect"
                            >
                            <!-- columns: Define table columns -->
                                <columns>
                                <!-- Column for Status -->
                                    <Column width="3%">
                                        <customData>
                                            <core:CustomData
                                                key="p13nData"
                                                value="{
                                                    columnKey: 'Status',
                                                    columnIndex: 0
                                                }"
                                            />
                                        </customData>
                                        <core:Icon
                                            decorative="true"
                                            noTabStop="false"
                                            src="sap-icon://edit"
                                            useIconTooltip="true"
                                        >
                                            
                                        </core:Icon>
                                    </Column>
                                    <!-- Column for Product ID -->
                                    <Column>
                                        <customData>
                                            <core:CustomData
                                                key="p13nData"
                                                value="{
                                                    columnKey: 'ProductID',
                                                    leadingProperty: 'ProductID',
                                                    columnIndex: 1
                                                }"
                                            />
                                        </customData>
                                        <Text text="Product ID" />
                                    </Column>
                                    <!-- Column custom for Supplier ComboBox -->
                                    <Column>
                                        <customData>
                                            <core:CustomData
                                                key="p13nData"
                                                value="{
                                                    columnKey: 'SupplierID',
                                                    leadingProperty: 'SupplierID',
                                                    columnIndex: 3
                                                }"
                                            />
                                        </customData>
                                        <Text text="Supplier Name" />
                                    </Column>
                                </columns>
                                 <!-- items: Define table rows -->
                                <items>
                                    <ColumnListItem vAlign="Inherit">
                                        <cells>

                                        <!-- Icon Status cell -->
                                            <core:Icon
                                                activeBackgroundColor=""
                                                activeColor=""
                                                alt=""
                                                backgroundColor=""
                                                color=""
                                                decorative="true"
                                                height=""
                                                hoverBackgroundColor=""
                                                hoverColor=""
                                                noTabStop="false"
                                                size=""
                                                src=""
                                                useIconTooltip="true"
                                                width=""
                                            >
                                            </core:Icon>

                                            <!-- Text cell for uneditable Product ID -->
                                            <Text text="{ProductID}" />

                                            <!-- ComboBox cell for Supplier ID -->
                                            <ComboBox
                                                items="{/BusinessPartnerSet}"
                                                selectedKey="{SupplierID}"
                                                selectionChange="onComboBoxChange"
                                                enabled="{comboBoxView>/editable}"
                                            >
                                                <items>
                                                    <core:Item
                                                        key="{BusinessPartnerID}"
                                                        text="{CompanyName}"
                                                    />
                                                </items>
                                            </ComboBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>

<!-- customToolbar: Define a custom toolbar for SmartTable -->
                            <smarttable:customToolbar>
                                <OverflowToolbar id="idSmartTableToolbar">
                                    <ToolbarSpacer />
                                    <Toolbar
                                        id="idToolBarBox"
                                        visible="false"
                                    >
                                    <!-- GenericTag for displaying status -->
                                        <GenericTag
                                            id="idGenericTag"
                                            text="Not Updated"
                                            status="Success"
                                        />
                                        <!-- Reset button -->
                                        <Button
                                            text="Reset"
                                            type="Transparent"
                                            press="onReset"
                                            icon="sap-icon://reset"
                                        />
                                        <!-- Add button -->
                                        <Button
                                            text="Add"
                                            type="Transparent"
                                            press="onAdd"
                                            icon="sap-icon://add-activity"
                                        />
                                        <!-- Remove button -->
                                        <Button
                                            text="Remove"
                                            type="Reject"
                                            press="onDelete"
                                            icon="sap-icon://delete"
                                        />
                                    </Toolbar>

                                    <!-- Label and Switch for edit mode -->
                                    <Label text="Edit Mode" />
                                    <Switch
                                        state="false"
                                        change="onEditModeSwitch"
                                    />

                                    <!-- Second Toolbar with separator and Send button -->
                                    <Toolbar
                                        id="idSecondToolBarBox"
                                        visible="false"
                                    >
                                        <ToolbarSeparator
                                        >
                                        </ToolbarSeparator>
                                        <Button
                                            text="Send"
                                            type="Ghost"
                                            press="onSend"
                                        />
                                    </Toolbar>
                                </OverflowToolbar>
                            </smarttable:customToolbar>
                        </smarttable:SmartTable>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>